<h1>New Task</h1>
<div>
  <p>
    <%= form_for(@task) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :details %>
      <%= f.text_area :details, size: "70x5" %>
      <%= f.submit %>
    <% end %>
  </p>
  <br>
  <br>
  <p><%= link_to "Back to list", tasks_path %></p>
</div>
